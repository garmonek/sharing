<table class="table">
    <tbody>
    <tr>
        <th>Active</th>
        <td>{{ offer.active ? 'Yes' : 'No' }}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{ offer.description }}</td>
    </tr>
    <tr>
        <th>Id</th>
        <td>{{ offer.id }}</td>
    </tr>
    <tr>
        <th>Tags</th>
        <td>
            {%  for tag in offer.tags %}
                <span>{{ tag.name ~ (not loop.last ? ', ') }}</span>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Exchange Tags</th>
        <td>
            {%  for tag in offer.exchangeTags %}
                <span>{{ tag.name ~ (not loop.last ? ', ') }}</span>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>CreatedAt</th>
        <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
        <th>UpdatedAt</th>
        <td>{{ offer.updatedAt ? offer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    </tbody>
</table>
