{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Active</th>
                <td>{{ offer.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {%  for tag in offer.tags %}
                        <span>{{ tag.name ~ (not loop.last ? ', ') }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Exchange Tags</th>
                <td>
                    {%  for tag in offer.exchangeTags %}
                        <span>{{ tag.name ~ (not loop.last ? ', ') }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ offer.updatedAt ? offer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offer/_delete_form.html.twig') }}

    {{ include('offer/_image_index.html.twig') }}

    <h2>{{ 'offer.show.mathing_listing.title' }}</h2>

    {{ include('offer/_listing.html.twig') }}

{% endblock %}
